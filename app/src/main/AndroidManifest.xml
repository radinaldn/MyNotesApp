<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="id.topapp.radinaldn.mynotesapp">

    <!-- Untuk kebutuhan content provider-->
    <permission android:name="id.topapp.radinaldn.mynotesapp.READ_DATABASE"
        android:protectionLevel="normal"/>
    <permission android:name="id.topapp.radinaldn.mynotesapp.WRITE_DATABASE"
        android:protectionLevel="normal"/>
    <!-- End Untuk kebutuhan content provider-->

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.FormAddUpdateActivity"></activity>

        <!-- Untuk kebutuhan content provider-->
        <provider
            android:authorities="id.topapp.radinaldn.mynotesapp"
            android:name=".provider.NoteProvider"
            android:exported="true"
            android:readPermission="id.topapp.radinaldn.mynotesapp.READ_DATABASE"
            android:writePermission="id.topapp.radinaldn.mynotesapp.WRITE_DATABASE"/>
        <!-- End Untuk kebutuhan content provider-->

    </application>

</manifest>